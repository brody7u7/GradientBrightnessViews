<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GradientBar">
        <attr name="maxProgress" format="float"/>
        <attr name="progress" format="float"/>
        <attr name="progressStartColor" format="color|reference"/>
        <attr name="progressEndColor" format="color|reference"/>
        <attr name="progressBackgroundColor" format="color|reference"/>
        <attr name="hasBrightness" format="boolean"/>
        <attr name="borderOffset" format="dimension"/>
        <attr name="borderRound" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="GradientSeekBar">
        <attr name="maxProgress"/>
        <attr name="minProgress" format="float"/>
        <attr name="progress"/>
        <attr name="progressStartColor"/>
        <attr name="progressEndColor"/>
        <attr name="progressBackgroundColor"/>
        <attr name="hasBrightness"/>
        <attr name="borderOffset"/>
        <attr name="borderRound"/>
        <attr name="startAngle" format="integer"/>
        <attr name="endAngle" format="integer" />
        <attr name="arcWidth" format="dimension"/>
    </declare-styleable>
</resources>